  <script nonce="<%= nonce %>">
    function copyLink(id) {
      navigator.clipboard.writeText(document.getElementById('link-' + id).textContent).then(() => toast('âœ… é“¾æ¥å·²å¤åˆ¶'));
    }
    function copySubLink() {
