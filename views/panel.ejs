    function toggleNodeLink(id, btn) {
      const el = document.getElementById('link-' + id);
      if (!el) return;
      const collapsed = el.dataset.collapsed === '1';
      if (collapsed) {
        el.style.maxHeight = '9rem';
        el.dataset.collapsed = '0';
        btn.textContent = 'æ”¶èµ·é“¾æ¥';
      } else {
        el.style.maxHeight = '2.5rem';
        el.dataset.collapsed = '1';
        btn.textContent = 'å±•å¼€é“¾æ¥';
      }
    }
    function toggleDesktopLink(id, btn) {
      const box = document.getElementById('link-box-' + id);
      const el = document.getElementById('link-' + id);
      if (!box || !el) return;
      const isHidden = box.classList.contains('desktop-collapsed');
      if (isHidden) {
        box.classList.remove('desktop-collapsed');
        el.style.maxHeight = '8rem';
        el.dataset.collapsed = '0';
        btn.textContent = 'æ”¶èµ·';
      } else {
        box.classList.add('desktop-collapsed');
        el.style.maxHeight = '2.5rem';
        el.dataset.collapsed = '1';
        btn.textContent = 'å±•å¼€';
      }
    }
    function showSubQr() {
