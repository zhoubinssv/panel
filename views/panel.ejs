      modal.classList.remove('flex');
      modal.classList.add('hidden');
    }
    function copySub6Link() {
      navigator.clipboard.writeText(document.getElementById('sub6-link').value).then(() => toast('âœ… IPv6 è®¢é˜…é“¾æ¥å·²å¤åˆ¶'));
